#!/bin/sh
echo "-----> Importing Xero Certificates"

# export the AWS keys
ENV_DIR=$3
for KEY in AWS_ACCESS_KEY_ID AWS_SECRET_ACCESS_KEY RAILS_ENV; do
  [ -f $ENV_DIR/$KEY ] && export "$KEY=$(cat $ENV_DIR/$KEY)"
done

cd $1
bundle exec ./bin/post-deploy --path vendor/bundle

# Make sure Xero certificates were downloaded by XeroImporter
if [ -f ./config/certs/entrust-cert-2016.pem ]; then
  echo "--- Found entrust-cert-2016.pem"
  exit 0
else
  echo "Missing config/certs/entrust-cert-2016.pem"
  exit 1
fi

cd -
